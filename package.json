{
	"private": true,
	"name": "kotlin-js-webpack-example",
	"version": "0.0.1",
	"scripts": {
		"start": "webpack-dev-server --progress --watch-poll --config webpack.dev.js",
		"build": "webpack --progress --profile --bail --display-reasons --display-error-details --config webpack.prod.js",
		"test": "jest",
		"clean": "rimraf dist kotlin_build",
		"rm": "rimraf dist kotlin_build node_modules",
		"lint": "eslint src",
		"source-map": "webpack --config webpack.prod.js --devtool='source-map'"
	},
	"devDependencies": {
		"@jetbrains/kotlin-webpack-plugin": "^1.2.7",
		"clean-webpack-plugin": "^0.1.19",
		"css-loader": "^1.0.0",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"kotlin": "^1.2.51",
		"mini-css-extract-plugin": "^0.4.1",
		"source-map-loader": "^0.2.3",
		"style-loader": "^0.21.0",
		"webpack": "^4.16.2",
		"webpack-cli": "^3.1.0",
		"webpack-dev-server": "^3.1.5",
		"webpack-merge": "^4.1.3"
	},
	"dependencies": {}
}
